{
  "logging": {
    "logs": {
      "default": {
        "level": "INFO",
        "writer": {
          "output": "stdout"
        }
      },
      "access": {
        "level": "INFO",
        "writer": {
          "output": "stdout"
        },
        "include": ["http.log.access"]
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "proxy_server": {
          "listen": [":3000"],
          "logs": {
            "default_logger_name": "access"
          },
          "routes": [
            {
              "match": [
                { "path": ["/*"] }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    { "dial": "38.108.83.120:29102" }
                  ],
                  "headers": {
                    "request": {
                      "add": {
                        "Authorization": ["Bearer 8effaeb9f7e5c067df32131867ba582323d5a16b8b1bb4b95b2a74cecc525e97"]
                        ,"X-Forwarded-For": ["{http.request.remote.host}"],
                        "X-Real-IP": ["{http.request.remote.host}"]
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}
